<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HelpActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_help"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Help" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ▼▼▼ NEWLY ADDED SECTION ▼▼▼ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/iv_app_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/tv_version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Version 0.5.0" />

            </LinearLayout>
            <!-- ▲▲▲ END OF NEW SECTION ▲▲▲ -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Getting Started Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Getting Started"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Set up your company information in Settings before creating reports.\n\n2. Fill in customer details and water source information.\n\n3. Enter test results for the parameters you measured.\n\n4. Add notes and/or recommendations if needed.\n\n5. Click 'Generate Report' to create a professional report."
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Water Source Information -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Source Types"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Municipal: Public water supply. \n\n• Private Well: Individual well serving a single property.\n\n• Community Well: Well serving multiple properties or a community."
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Test Parameters -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Understanding Test Parameters"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parameters that are automatically bolded when they exceed safe levels:\n\n• Hardness: &gt;180 ppm\n• TDS: &gt;500 ppm\n• pH: &lt;6.5 or &gt;8.5\n• Iron: &gt;0.3 ppm\n• Ammonia: &gt;0.5 ppm\n• Nitrates: &gt;10 ppm\n• Manganese: &gt;0.05 ppm\n\nParameters always bolded (health priority):\n• Arsenic\n• Chromium 6\n• Glyphosate\n• Lead"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- PDF Reports -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF Reports"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Generated PDF reports are saved to your device's Documents folder.\n\nThe report includes:\n• Your company information\n• Customer details\n• Test date and tester initials\n• All measured parameters\n• Notes (on a second page if entered)\n\nReports are formatted for easy printing and sharing."
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tips -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tips"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Use the tester initials field to track who performed each test.\n\n• You only need to enter values for parameters you actually tested.\n\n• The Clear Form button will reset all fields - use it to start a new test.\n\n• Your company information is saved automagically and will appear on all reports.\n\n• Use All-Range Mode to list untested parameters."
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Support -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For questions, bug reports, or feature requests, please visit:"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvGitHubLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="github.com/crotsertech/Test-Takers-Toolkit"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:background="?attr/selectableItemBackground" />

                            <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\n\nIf you found this application helpful, please consider buying the developer a coffee to say thanks! "
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvCoffeeLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click here to buy a coffee!"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:background="?attr/selectableItemBackground" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Attribution Footer -->
                <ImageView
                    android:id="@+id/ivAttribution"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Crotsertech Badge"
                    app:srcCompat="@drawable/crotsertech_badge_classic" />

               <!-- <ImageView
                    android:id="@+id/ivAttribution"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Powered by Dr. Pepper easter egg"
                    app:srcCompat="@drawable/pepperpower" /> -->


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
